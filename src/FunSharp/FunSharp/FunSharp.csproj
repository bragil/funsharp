<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
	<LangVersion>11</LangVersion>
	<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	<Title>FunSharp</Title>
	<PackageTags>functional;monad;result;maybe;railway</PackageTags>
	<RepositoryUrl>https://github.com/bragil/funsharp</RepositoryUrl>
	<PackageProjectUrl>https://github.com/bragil/funsharp</PackageProjectUrl>
	<Description>Provides a functional programming approach to elegantly handle errors and avoid problems with null values.</Description>
	<AssemblyVersion>2.0.8.0</AssemblyVersion>
	<FileVersion>2.0.8.0</FileVersion>
	<Authors>bragil@gmail.com</Authors>
	<Version>2.0.8.0</Version>
	<PackageReadmeFile>README.md</PackageReadmeFile>
	<PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Update="LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
